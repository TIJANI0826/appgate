#:include kv/civic/civic1.kv
#:include kv/civic/civic2.kv
#:include kv/civic/civic3.kv
#:include kv/civic/civic4.kv
#:include kv/civic/civic5.kv
#:include kv/civic/civic6.kv
#:include kv/civic/civic7.kv
#:include kv/civic/civic8.kv
#:include kv/civic/civic9.kv
#:include kv/civic/civic10.kv
<Civic>:
    BoxLayout:
        id : box
        name: 'box'
        MDAccordion:
            orientation: 'horizontal'
            size_hint_x: None
            width: '240dp'
            MDAccordionItem:
                title:'Civic'
                icon: 'book-open'
                MDAccordionSubItem:
                    text: "1"
                    on_release: sm.current = "one"
                MDAccordionSubItem:
                    text: "2"
                    on_release: sm.current = "two"
                MDAccordionSubItem:
                    text: "3"
                    on_release: sm.current = "three"
                MDAccordionSubItem:
                    text: "4"
                    on_release: sm.current = "four"
                MDAccordionSubItem:
                    text: "5"
                    on_release: sm.current = "five"
                MDAccordionSubItem:
                    text: "6"
                    on_release: sm.current = "six"
                MDAccordionSubItem:
                    text: "7"
                    on_release: sm.current = "seven"
                MDAccordionSubItem:
                    text: "8"
                    on_release: sm.current = "eight"
                MDAccordionSubItem:
                    text: "9"
                    on_release: sm.current = "nine"
                MDAccordionSubItem:
                    text: "10"
                    on_release: sm.current = "ten"
        ScreenManager:
            id: sm
            name : 'sm'
            Screen:
                id: welcome
                BoxLayout:
                    TextInput
                        text: 'CIVIC'
                        disabled: True
            Civic1:
                id : one
                name : 'one'

            Civic2:
                id : two
                name : 'two'
            Civic3:
                id : three
                name : 'three'
            Civic4:
                id : four
                name : 'four'
            Civic5:
                id : five
                name : 'five'
            Civic6:
                id : six
                name : 'six'
            Civic7:
                id : seven
                name : 'seven'
            Civic8:
                id : eight
                name : 'eight'
            Civic9:
                id : nine
                name : 'nine'
            Civic10:
                id : ten
                name : 'ten'
<ToggleButton,Button>:
    padding: dp(10), dp(8)
    size_hint: None, None
    size: self.texture_size
<DemoLabel@Label>:
    canvas:
        Color:
            rgba: 216/255., 195/255., 88/255., 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
