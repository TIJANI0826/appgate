<Islamic5>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id : text_input
            text:
                """
                5. Which of the following Hadith talks of the lawful and unlawful?
                (a) 15
                (b) 1
                (c) 13
                (d) 6
                """
            markup: True
            font_size: '20pt'
            readonly: True
            size_hint: 1, 4
            text_color:"Blue"
        TextInput:
            id : timed
            text:
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Answer"
                font_size: '30pt'
                size_hint: 0.5, 0.5
                on_release: textinput.text = "D"

            TextInput:
                id:textinput
                text:
                font_size: '30pt'
                disabled: True
                readonly : True
                size_hint: 0.5, 0.5
