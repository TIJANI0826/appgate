    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id : text_input
            text:
                """
                2.	The case of HIV/AIDS was first diagnosed in Nigeria in the year
                A. 1974
                B. 1985
                C. 1988
                D. 1995
                """
            markup: True
            font_size: '20pt'
            readonly: True
            size_hint: 1, 4
