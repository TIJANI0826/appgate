<English10>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id : text_input
            text:
                """
                10. What is the plural of the animal name: OX
                a. oxes
                b. oxen
                c. oxter
                d. oxs
                """
            markup: True
            font_size: '20pt'
            readonly: True
            size_hint: 1, 4
            text_color: "Blue"
        TextInput:
            id : timed
            text:
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Answer"
                font_size: '30pt'
                size_hint: 0.5, 0.5
                on_release: textinput.text = "OXEN"
            TextInput:
                id:textinput
                text:
                font_size: '30pt'
                disabled: True
                readonly : True
                size_hint: 0.5, 0.5