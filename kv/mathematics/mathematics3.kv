<Mathematics3>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id : text_input
            text:
                """
                3. Evaluate (9 )/2q =  10-(8 )/3
                ; find the value of q?
                (a)   ( 27 )/44
                (b)1 (1 )/4
                (c) 1 (1 )/24
                (d) 1 (7 )/44
                (e) 1 (4 )/5
                """
            markup: True
            font_name : 'Arial'
            font_size: '20pt'
            readonly: True
            size_hint: 1, 4
            text_color:"Blue"
        TextInput:
            id : timed
            text:
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Answer"
                font_size: '30pt'
                size_hint: 0.5, 0.5
                on_release: textinput.text = "A"

            TextInput:
                id:textinput
                text:
                font_size: '30pt'
                disabled: True
                readonly : True
                size_hint: 0.5, 0.5
