<Mathematics10>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id : text_input
            text:
                """
                10.	Find the median of the number of goals scored in a football tournament; 2, 3, 2, 3, 4, 1, 2?
                (a) 1
                (b) 2
                (c) 3
                (d) 4
                (e) 5
                """
            markup: True
            font_name : 'Arial'
            font_size: '20pt'
            readonly: True
            size_hint: 1, 4
            text_color:"Blue"
        TextInput:
            id : timed
            text:
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Answer"
                font_size: '30pt'
                size_hint: 0.5, 0.5
                on_release: textinput.text = "B"

            TextInput:
                id:textinput
                text:
                font_size: '30pt'
                disabled: True
                readonly : True
                size_hint: 0.5, 0.5
