<MainAppScreen>:
    id : sud
    NavigationLayout:
        id: nav_layout
        MDNavigationDrawer:
            drawer_logo: './assets/robin-944887_1280.jpg'
            NavigationDrawerDivider:
            NavigationDrawerIconButton:
                icon: 'book'
                text: "Mathematics"
                on_release: screen_manager.current = "mathematics"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "English"
                on_release: screen_manager.current = "english"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "CIVIC"
                on_release: screen_manager.current = "civic"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ISLAMIC STUDIES"
                on_release: screen_manager.current = "islamic"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ARABIC"
                on_release:screen_manager.current = "arabic"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ADD A SUBJECT"
                on_release:screen_manager.current = "createsubject"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ADD A QUESTION"
                on_release:screen_manager.current = "createquestion"
        BoxLayout:
            orientation : "vertical"
            NavigationDrawerToolbar:
                title:"ISCHOLARS QUIZ COMPETITION"

                left_action_items: [['home', lambda x: nav_layout.toggle_nav_drawer()]]
                right_action_items: [['settings', lambda x: app.open_settings()]]
            ScreenManager:
                id: screen_manager
                English:
                    id : english
                    name : 'english'
                Mathematics:
                    id : mathematics
                    name : 'mathematics'
                Civic:
                    id : civic
                    name : 'civic'

                Islamic:
                    id : islamic
                    name : 'islamic'
                Arabic:
                    id: arabic
                    name : 'arabic'
                CreateSubject:
                    id: createsubject
                    name : 'createsubject'
                CreateQuestion:
                    id: createquestion
                    name : 'createquestion'

